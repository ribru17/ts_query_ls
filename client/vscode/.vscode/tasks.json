{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Extension",
      "group": "build",
      "type": "npm",
      "script": "build",
      "problemMatcher": {
        "base": "$tsc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ]
      }
    },
    {
      "label": "Build Server",
      "group": "build",
      "type": "shell",
      "command": "cargo build -r"
    },
    {
      "label": "Build Server and Extension",
      "dependsOn": [
        "Build Server",
        "Build Extension"
      ]
    }
  ]
}
