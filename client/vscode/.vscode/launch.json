{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "preLaunchTask": "Build Server and Extension",
      "env": {
        "SERVER_PATH": "${workspaceRoot}/../../target/release/ts_query_ls"
      },
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
